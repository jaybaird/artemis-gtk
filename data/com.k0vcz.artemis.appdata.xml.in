<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>@appid@</id>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <name>Artemis</name>
  <summary>A Parks On The Air (POTA) hunters sidekick</summary>

  <keywords>
    <keyword>POTA</keyword>
    <keyword>Parks On The Air</keyword>
    <keyword>ham radio</keyword>
    <keyword>amateur radio</keyword>
    <keyword>spotting</keyword>
    <keyword>spots</keyword>
    <keyword>activations</keyword>
    <keyword>park</keyword>
    <keyword>hunter</keyword>
    <keyword>chaser</keyword>
    <keyword>HF</keyword>
    <keyword>VHF</keyword>
    <keyword>UHF</keyword>
  </keywords>

  <translation type="gettext">artemis</translation>
  <content_rating type="oars-1.0" />

  <description>
    <p>
      Artemis is a desktop companion for chasing Parks On The Air (POTA) activations. It focuses exclusively on hunting—surfacing fresh spots and getting you on frequency fast.
    </p>

    <ul>
      <li><b>Live spots & fast filters:</b> Quickly slice by band, mode, callsign, or park.</li>
      <li><b>Rig control & auto-tune:</b> Tune your radio to a selected spot (hamlib/CAT-compatible rigs via <code>rigctld</code> or similar).</li>
      <li><b>Built-in logging:</b> Capture contact details while you hunt, without leaving the app.</li>
      <li><b>Unworked park highlighting:</b> Visually flag parks you haven’t hunted yet.</li>
      <li><b>GNOME/Adwaita UI:</b> Responsive layout, keyboard shortcuts, and dark mode.</li>
    </ul>
    <p>
      Artemis is purpose built for POTA hunters
    </p>
  </description>

  <url type="homepage">https://example.com/artemis</url>
  <url type="vcs-browser">https://example.com/artemis/repo</url>
  <url type="bugtracker">https://example.com/artemis/issues</url>

  <supports>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </supports>

  <requires>
    <display_length compare="ge">360</display_length>
  </requires>

  <custom>
    <value key="GnomeSoftware::key-colors">[(14, 163, 122), (20, 107, 90)]</value>
  </custom>
  <branding>
    <color type="primary" scheme_preference="light">#0EA37A</color>
    <color type="primary" scheme_preference="dark">#146B5A</color>
  </branding>

  <screenshots>
